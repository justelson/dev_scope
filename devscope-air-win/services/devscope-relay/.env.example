PORT=8787
HOST=0.0.0.0
NODE_ENV=development

# devscope-cloud | self-hosted
RELAY_KIND=self-hosted

# Set a strong value in production
RELAY_SECRET=change-me

# Optional. If omitted, generated from RELAY_SECRET.
RELAY_FINGERPRINT=

# Optional, used in pairing payload link generation
DEEP_LINK_SCHEME=devscope

# Optional. If set, required in header `x-devscope-relay-key` for protected endpoints.
RELAY_API_KEY=

# Basic in-memory rate limit (per IP per minute)
RATE_LIMIT_MAX_PER_MINUTE=60
